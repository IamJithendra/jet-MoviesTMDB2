<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <set android:duration="800">
        <translate
            android:fromXDelta="25%"
            android:toXDelta="0"
            />
        <scale
            android:pivotX="0%"
            android:pivotY="0%"
            android:fromXScale="0.8"
            android:fromYScale="0.8"
            android:toXScale="1"
            android:toYScale="1"
            />
        <alpha
            android:fromAlpha="0"
            android:toAlpha="1.0"
            />
    </set>

</set>